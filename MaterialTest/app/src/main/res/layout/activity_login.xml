<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLogin"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:text="@string/tx_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/remember_checkbox"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_login" />

    <TextView
        android:id="@+id/remember_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="bottom"
        android:text="@string/tx_remember"
        app:layout_constraintLeft_toRightOf="@id/remember_checkbox"
        app:layout_constraintTop_toBottomOf="@id/bt_login" />


    <Button
        android:id="@+id/bt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="40dp"
        android:background="#00000000"
        android:text="@string/tx_register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
         />

    <Button
        android:id="@+id/bt_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="#00000000"
        android:layout_marginRight="100dp"
        android:text="@string/tx_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/im_pass"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="70dp"
        android:src="@mipmap/ic_comment"
        android:background="@mipmap/pear"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@id/bt_login"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/ed_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@id/bt_login"
        app:layout_constraintRight_toLeftOf="@id/im_pass" />

    <ImageView
        android:id="@+id/im_name"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/banana"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@id/ed_pass"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/ed_pass"
        app:layout_constraintLeft_toRightOf="@id/im_name" />

</androidx.constraintlayout.widget.ConstraintLayout>