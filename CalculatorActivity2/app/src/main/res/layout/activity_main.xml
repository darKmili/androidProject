<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end|bottom"
            android:hint="0"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/text_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|bottom"
            android:hint="0"
            android:textColor="#ff090000"
            android:textSize="40sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#BCD0D3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="clear"
                android:text="AC"
                android:textColor="#C16446"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="delete"
                android:text="D"
                android:textColor="#C16446"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_percent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:text="%"
                android:textColor="#C16446"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_dvs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="divide"
                android:text="/"
                android:textColor="#C16446"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textSize="30sp">

            <Button
                android:id="@+id/bt_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="get7"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="get8"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="get9"
                android:text="9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_mul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="mul"
                android:text="X"
                android:textColor="#C16446"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="get4"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="get5"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="get6"
                android:text="6"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_min"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="min"
                android:text="â€”"
                android:textColor="#C16446"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="get1"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="get2"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="get3"
                android:text="3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_ad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="add"
                android:text="+"
                android:textColor="#C16446"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/bt_selector"
                android:onClick="get0"
                android:text="0"
                android:textColor="#C16446"
                android:textSize="30sp" />


            <Button
                android:id="@+id/bt_dot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="getDot"
                android:text="."
                android:textColor="#C16446"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_eq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_selector"
                android:onClick="getEquals"
                android:text="="
                android:textColor="#C16446"
                android:textSize="30sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>