<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_tishi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="耳标号:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_erbiaohao"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="9990-0160-5008-222"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@id/text_tishi"
        app:layout_constraintLeft_toRightOf="@id/text_tishi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/zhenzhu"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toLeftOf="@id/barrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_tishi"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="text_time,text2,text3"
        tools:layout_editor_absoluteX="206dp" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:text="种类"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/text2"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintTop_toTopOf="@id/image" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:text="栏区"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintBottom_toTopOf="@id/text3"
        app:layout_constraintTop_toBottomOf="@id/text_time"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@id/image"
        android:layout_marginLeft="64dp"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:text="猪舍"/>

    <EditText
        android:id="@+id/edit1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/text_time"
        app:layout_constraintTop_toTopOf="@id/text_time"
        app:layout_constraintBaseline_toBaselineOf="@id/text_time"
        android:text="H23"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/edit2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/text2"
        app:layout_constraintTop_toTopOf="@id/text2"
        app:layout_constraintBaseline_toBaselineOf="@id/text2"
        android:text="e456"
        android:layout_marginStart="16dp"/>
    <EditText
        android:id="@+id/edit3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/text3"
        app:layout_constraintTop_toTopOf="@id/text3"
        app:layout_constraintBaseline_toBaselineOf="@id/text3"
        android:text="76878"
        android:layout_marginStart="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>